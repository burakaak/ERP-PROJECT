@model FirmaCagriMvc.Models.Entity.CagriTb
@{
    ViewBag.Title = "CagriGetir";
    Layout = "~/Views/Shared/MusteriLayout.cshtml";
}

<h2>Çağrı Düzenleme Sayfası</h2>
<br />
@using (Html.BeginForm("CagriDuzenle", "Default", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.Id)
    
    @Html.Label("Konu")
    @Html.TextBoxFor(x => x.Konu, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.Aciklama, 10, 4, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Değişiklikleri Kaydet</button>
}


