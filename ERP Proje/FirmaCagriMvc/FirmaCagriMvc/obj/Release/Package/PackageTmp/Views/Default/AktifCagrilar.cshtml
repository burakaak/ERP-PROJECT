@using FirmaCagriMvc.Models.Entity
@model List<CagriTb>
@{
    ViewBag.Title = "AktifCagrilar";
    Layout = "~/Views/Shared/MusteriLayout.cshtml";
}


<h2>Aktif Çağrılar</h2>
<table class="table table-bordered">
    <tr>

        <th>Id</th>
        <th>Konu</th>
        <th>Tarih</th>
        <th>Düzenle</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.Konu</td>
            <td>@x.Tarih</td>
            <td><a href="/Default/CagriGetir/@x.Id/" class="btn btn-success">Düzenle</a> </td>
            <td><a href="/Default/CagriDetay/@x.Id/" class="btn btn-info">Detaylar</a></td>

        </tr>

    }


</table> 
<a href="/Default/YeniCagri/" class="btn btn-primary">Yeni Çağrı Ekle</a>